@model IEnumerable<TheatreCompany.Models.Comment>

@{
    ViewBag.Title = "Index";
}
<div id="content">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                <p>@Html.DisplayNameFor(model => model.Body)</p>
</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@Html.DisplayFor(modelItem => item.Body)</p>
</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CommentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CommentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CommentId })
                </td>
            </tr>
        }

    </table>
</div>
