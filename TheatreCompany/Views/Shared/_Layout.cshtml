<!-- This layout will cover the top left and left side of the screen on every page -->
@using Microsoft.AspNet.Identity

<!doctype html>


<html lang="en" class="no-js">
<head>
    <title>Theatre Company</title>

    <!-- Define all scripts in head to work on all pages -->
    @Styles.Render("~/css/style")
    @Scripts.Render("~/Scripts/modernizr")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("scripts", required: false)

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Define required fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Rubik:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined"
          rel="stylesheet">

    <!-- Define all css assets-->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/line-awesome.min.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/magnific-popup.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/owl.carousel.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/owl.theme.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/jquery-ui.min.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/jquery.bxslider.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/flexslider.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/css/settings.css">
    <link rel="stylesheet" type="text/css" href="~/css/layers.css">
    <link rel="stylesheet" type="text/css" href="~/css/navigation.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">

</head>

<!-- Page Body (still part of layout) -->
<body>

    <div id="ip-container" class="ip-container">

        <!-- initial loader -->
        <div class="ip-header">

            <p class="ip-logo">
                <img src="~/images/logo-image.png" alt="">
            </p>

            <div class="ip-loader">
                <svg class="ip-inner" width="100px" height="100px" viewBox="0 0 80 80">
                    <path class="ip-loader-circlebg" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z" />
                    <path id="ip-loader-circle" class="ip-loader-circle" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z" />
                </svg>
            </div>

        </div>

        <!-- Container -->
        <div id="container">

            <!-- Header and sidebar
            ================================================== -->
            <header class="clearfix">

                <div class="logo">
                    <a href="/Home"><img src="~/images/logo-image.png" alt=""></a>
                </div>
                <div class="header-line">
                    <a class="open-menu-toggle" href="#">
                        <span></span>
                        <span></span>
                        <span></span>
                    </a>
                    <!-- Side bar with social icons -->
                    <div class="social-line">
                        <ul class="social-list">
                            <li>
                                <a href="https://www.facebook.com/kingsandtheatreroyalglasgow/"><i class="fab fa-facebook-square"></i></a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/kingsandroyalglasgow/?hl=en"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/KingsandRoyal?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"><i class="fab fa-twitter-square"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="copyright-line">
                        <p>© Theatre Company 2022</p>
                    </div>
                </div>

                <!-- Popout menu -->
                <nav class="nav-menu-box">
                    <ul class="navigation-menu-list">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("About", "About", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Location", "Contact", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Blog", "", "Posts")
                        </li>
                        <!-- Check if the user is authenticated and depending on role show required menu -->
                        @if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("Member"))
                            {
                                <li class="menu-item-has-children">
                                    <a href="#"><span><em>Member Options</em></span></a>
                                    <ul class="sub-menu">
                                        <li>@Html.ActionLink("My Details", "Index", "User")</li>
                                        <li>@Html.ActionLink("My Comments", "Index", "Comments")</li>
                                        <li>@Html.ActionLink("Log Off", "Login", "Account")</li>
                                    </ul>
                                </li>


                            }
                            <!-- If admin show admin menu -->
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                            }
                            <!-- If not in a role they can log in -->
                            if (User.IsInRole(""))
                            {

                            }
                        }
                        <li>
                            @Html.ActionLink("Join/Login", "Login", "Account")
                        </li>
                    </ul>
                </nav>

            </header>
            <!-- End Header -->


        </div>

        <!-- End Container -->
        <!-- RenderBody is where the chosen other pages load -->
        @RenderBody()
    </div>

    <!-- Showing scripts at bottom -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.migrate.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.nouislider.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.imagesloaded.min.js"></script>
    <script src="~/js/jquery.isotope.min.js"></script>
    <script src="~/js/jquery.bxslider.min.js"></script>
    <script src="~/js/jquery.flexslider.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/pathLoader.js"></script>
    <script src="~/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/js/jquery.appear.js"></script>
    <script src="~/js/jquery.countTo.js"></script>
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyCiqrIen8rWQrvJsu-7f4rOta0fmI5r2SI&amp;sensor=false&amp;language=en"></script>
    <script src="~/js/gmap3.min.js"></script>
    <script src="~/js/script.js"></script>


</body>
</html>